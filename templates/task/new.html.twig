{% extends 'base.html.twig' %}

{% block title %}Создание задания{% endblock %}

{% block body %}
    <h1 class="ml-5 text-xl mt-5">Создание задания</h1>
    {{ form_start(form) }}
    <div class="flex flex-col w-96 m-5">
        <div>
            {{ form_label(form.name, 'Название', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
            {{ form_widget(form.name, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(form.name) }}
        </div>
        <div>
            {{ form_label(form.link, 'Ссылка', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
            {{ form_widget(form.link, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(form.link) }}
        </div>
        <div>
            {{ form_label(form.deadline, 'Дедлайн', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
            {{ form_widget(form.deadline, {'attr': {'class': 'flex flex-row mt-1 mb-2'}}) }}
            {{ form_errors(form.deadline) }}
        </div>
        <div>
            {{ form_label(form.points, 'Количество очков', {'label_attr': {'class': 'block text-sm text-gray-700 font-medium'}}) }}
            {{ form_widget(form.points, {'attr': {'class': 'block w-full shadow-sm border-gray-300 rounded-md border p-2 mt-1 mb-2'}}) }}
            {{ form_errors(form.points) }}
        </div>
        <button type="submit" class="btn btn-outline w-full">Создать</button>
    </div>
    {{ form_end(form) }}
{% endblock %}
