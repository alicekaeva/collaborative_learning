{% extends 'base.html.twig' %}

{% block title %}Группы{% endblock %}
{% block button %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="flex justify-end">
            <a class="btn mr-2" href="{{ path('app_group_new') }}">Создать группу</a>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    {% for group in groups %}
        <div class="card w-full bg-base-100 shadow-xl mb-3">
            <div class="card-body">
                <div class="flex justify-start">
                    <div>{{ group.name }}</div>
                </div>
                <p class="card-title">{{ group.info }}</p>
                <div class="card-actions flex justify-between">
                    <div>
                        <div class="badge badge-outline bg-green-200">{{ group.tags[0].category.name }}</div>
                        {% for tag in group.tags %}
                            <div class="badge badge-outline bg-fuchsia-200">{{ tag }}</div>
                        {% endfor %}
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <div class="badge badge-outline">Студентов: {{ group.students.count }} из {{ group.requiredStudents }}</div>
                            <div class="badge badge-outline">Преподавателей: {{ group.teachers.count }} из {{ group.requiredTeachers }}</div>
                        {% endif %}
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div>
                            Вступить
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
