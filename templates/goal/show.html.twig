{% extends 'base.html.twig' %}

{% block title %}Goal{% endblock %}

{% block body %}
    <h1>Goal</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ goal.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ goal.name }}</td>
            </tr>
            <tr>
                <th>Points</th>
                <td>{{ goal.points }}</td>
            </tr>
            <tr>
                <th>Deadline</th>
                <td>{{ goal.deadline ? goal.deadline|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_goal_index') }}">back to list</a>

    <a href="{{ path('app_goal_edit', {'id': goal.id}) }}">edit</a>

    {{ include('goal/_delete_form.html.twig') }}
{% endblock %}
