{% extends 'base.html.twig' %}

{% block title %}Объявления{% endblock %}
{% block button %}
    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
        <div class="flex justify-end">
            <a class="btn mr-2" href="{{ path('app_post_show', {'id': app.user.id}) }}">Мои объявления</a>
        </div>
    {% endif %}
{% endblock %}

{% block body %}
    {% for post in posts %}
        <div class="card w-full bg-base-100 shadow-xl mb-3">
            <div class="card-body">
                <div class="flex justify-between">
                    <div>{{ post.author }}</div>
                    <div>{{ post.postingDate ? post.postingDate|date('d/m/y') : '' }}</div>
                </div>
                <p class="card-title">{{ post.content }}</p>
                <div class="card-actions flex justify-between">
                    <div>
                        <div class="badge badge-outline bg-green-200">{{ post.tags[0].category.name }}</div>

                        {% for tag in post.tags %}
                            <div class="badge badge-outline bg-fuchsia-200">{{ tag }}</div>
                        {% endfor %}
                    </div>
                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                        <div>
                            {% if post.addedToFav.contains(app.user) %}
                                <a href="{{ path('app_unfavorite', { id: post.id }) }}"><i class="fa-solid fa-star fa-lg" style="color: #f0e800;"></i></a>
                            {% else %}
                                <a href="{{ path('app_favorite', { id: post.id }) }}"><i class="fa-regular fa-star fa-lg" style="color: #000000;"></i></a>
                            {% endif %}
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
